
@model Projeto.Presentation.Models.ClienteEdicaoViewModel

@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Atualizar dados de Clientes</h4>
<a href="/Cliente/Consulta" class="btn btn-info">Voltar para a página anterior</a>
<br />

@using (Html.BeginForm("AtualizarCliente", "Cliente", FormMethod.Post))
{

    @Html.HiddenFor(model => Model.IdCliente)

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <label>Nome do Cliente</label>
    @Html.TextBoxFor(model => model.Nome,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "NOME DO CLIENTE"
        })

    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </span>
    <br />

    <label>Email do Cliente</label>
    @Html.TextBoxFor(model => model.Email,
        new
        {
            @class = "form-control col-md-4",
            @placeholder = "EMAIL DO CLIENTE"
        })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Email)
    </span>
    <br />

    <INPUT type="submit" value="Atualizar Cliente" class="btn btn-success" />
    <br />

    <strong>@ViewBag.Mensagem</strong>
}
